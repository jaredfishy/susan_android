<resources>

    <style name="JZAppTheme.Parent" parent="Theme.AppCompat.DayNight.NoActionBar" />

    <style name="JZAppTheme" parent="JZAppTheme.Dark">
        <item name="primaryButtonTheme">@style/JZAppTheme.Button</item>
        <item name="drawerArrowStyle">@style/JZAppTheme.DrawerArrowStyle</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>
    
    <style name="JZAppTheme.Dark" parent="JZAppTheme.Parent">
        <item name="colorPrimary">@color/jzColorPrimary</item>
        <item name="colorPrimaryDark">@color/jzColorPrimaryDark</item>
        <item name="colorAccent">@color/jzColorAccent</item>
        <item name="primaryTextColor">@color/jzPrimaryText</item>
        <item name="buttonNormalColor">@color/jzButtonNormal</item>
        <item name="buttonHighlightColor">@color/jzButtonHighlight</item>
        <item name="buttonTextColor">@color/jzButtonText</item>
        <item name="android:windowBackground">@color/jzBackgroundColor</item>
        <item name="android:textColorSecondary">@color/jzTextColorSecondary</item>
    </style>

    <style name="JZAppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="JZAppTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/buttonTextColor</item>
    </style>

    <style name="JZAppTheme.Button"
        parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/buttonNormalColor</item>
        <item name="colorControlHighlight">?attr/buttonHighlightColor</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
    </style>

</resources>


